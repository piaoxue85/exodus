{
    "type": "PICK",
    "name": "Price_Under_STD",
    "tactic":
    {
        "condition":
        [
            {
                "index": "close",
                "function": "compare_against_mean_std",
                "period": 500,
                "min": -999,
                "max": -1
            },
            {
                "index": "div_2017_all",
                "function": "simple_compare",
                "method": "latest",
                "type": "absolute",
                "min": 0.1,
                "max": 9999.0
            },
            {
                "index": "volume",
                "function": "detect_abnormal",
                "method": "above_mean",
                "period": 30,
                "interval": 10,
                "ratio": 2,
                "times": 1
            }            
        ]
    }
}